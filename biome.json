{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 4,
    "lineWidth": 119,
    "ignore": ["backend/release-schema.json"]
  },
  "json": {
    "formatter": {
      "indentWidth": 2
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "complexity": {
        "useArrowFunction": "error",
        "useLiteralKeys": "error"
      },
      "performance": {
        "noDelete": "error"
      },
      "style": {
        "useTemplate": "error",
        "noUselessElse": "error"
      },
      "suspicious": {
        "noDoubleEquals": "error",
        "noGlobalIsNan": "error"
      }
    }
  }
}
